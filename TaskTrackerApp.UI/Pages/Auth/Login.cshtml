@page
@model TaskTrackerApp.UI.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="sidenav">
    <div class="login-main-text">
        <h2>Task Tracker<br /> Login Page</h2>
        <p>Please login with your credentials.</p>
    </div>
</div>

<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">

            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            @if (!string.IsNullOrWhiteSpace(TempData["ErrorMessage"]?.ToString()))
            {
                <script>
                    toastr.error("@TempData["ErrorMessage"]");
                </script>
            }

            @if (!string.IsNullOrWhiteSpace(TempData["SuccessMessage"]?.ToString()))
            {
                <script>
                    toastr.success("@TempData["SuccessMessage"]");
                </script>
            }

            <form method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <br />
                <button type="submit" class="btn btn-primary">Login</button>
                <a asp-page="/Auth/Register" class="btn btn-secondary">Register</a>
                <br />
                <a asp-page="/Index" class="btn btn-warning mt-2">Return to Home Page</a>
            </form>
        </div>
    </div>
</div>
