@page
@model TaskTrackerApp.UI.Pages.TaskItems.CreateModel
@{
    ViewData["Title"] = "Create Task";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h2>Create New Task</h2>
            <hr />
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(TempData["ErrorMessage"]?.ToString()))
    {
        <script>toastr.error("@TempData["ErrorMessage"]");</script>
    }

    @if (!string.IsNullOrWhiteSpace(TempData["SuccessMessage"]?.ToString()))
    {
        <script>toastr.success("@TempData["SuccessMessage"]");</script>
    }

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group mb-2">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-plus me-1"></i>Save
                    </button>
                    <a asp-page="List" class="btn btn-secondary">
                        <i class="fa fa-arrow-left me-1"></i>Return to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
